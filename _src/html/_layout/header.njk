<header class="relative shadow w-full h-16 lg:h-24 bg-white-500">
    <div class="container h-full">
        <div class="flex h-full justify-between items-center lg:relative">

            {# Logo #}
            <div class="h-10 z-40 lg:h-16">
                <a href="/" aria-label="Link to home" class="inline-block h-full">
                    <img src="//placehold.it/180x60" alt="Company logo" class="h-full">
                </a>
            </div>

            <div class="menu-wrap ">

                <input id="hamburger" class="hamburger__checkbox" type="checkbox">

                {# Hamburger #}
                <label class="hamburger__icon" for="hamburger" role="button" aria-haspopup="true" aria-label="Open Menu">
                    <div class="hamburger__bar"></div>
                    <div class="hamburger__bar"></div>
                    <div class="hamburger__bar"></div>
                </label>

                {# Menu #}
                <div class="menu menu--main" aria-hidden="true">
                    <nav class="menu__items menu__items--top">
                        <li class="menu__item">
                            {% include 'partials/menu-link.njk' %}
                            
                            {# Child menu button #}
                            <input id="child1" class="menu-more__checkbox" type="checkbox">
                            <label for="child1" role="button" aria-haspopup="true" aria-label="Open child Menu" class="menu-more__label">+</label>

                            {# Child menu #}
                            <div class="menu menu--child">
                                <nav class="menu__items menu__items--child">
                                    <li class="menu__item">
                                        {% include 'partials/menu-link.njk' %}
                                    </li>
                                    <li class="menu__item">
                                        {% include 'partials/menu-link.njk' %}
                                        
                                        {# Child menu button #}
                                        <input id="child1-1" class="menu-more__checkbox" type="checkbox">
                                        <label for="child1-1" role="button" aria-haspopup="true" aria-label="Open child Menu" class="menu-more__label">+</label>

                                        {# Child menu #}
                                        <div class="menu menu--child">
                                            <nav class="menu__items menu__items--child">
                                                <li class="menu__item">
                                                    {% include 'partials/menu-link.njk' %}
                                                </li>
                                                <li class="menu__item">
                                                    {% include 'partials/menu-link.njk' %}
                                                </li>
                                            </nav>
                                        </div>
                                    </li>
                                </nav>
                            </div>
                        </li>

                        <li class="menu__item">
                            {% include 'partials/menu-link.njk' %}
                            
                            {# Child menu button #}
                            <input id="child2" class="menu-more__checkbox" type="checkbox">
                            <label for="child2" role="button" aria-haspopup="true" aria-label="Open child Menu" class="menu-more__label">+</label>

                            {# Child menu #}
                            <div class="menu menu--child">
                                <nav class="menu__items menu__items--child">
                                    <li class="menu__item">
                                        {% include 'partials/menu-link.njk' %}
                                    </li>
                                    <li class="menu__item">
                                        {% include 'partials/menu-link.njk' %}
                                    </li>
                                </nav>
                            </div>
                        </li>
                    </nav>
                </div>

            </div>
            
        </div>
    </div>
</header>

