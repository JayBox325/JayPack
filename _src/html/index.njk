{% extends '_layout/_base.njk' %}

{# SPA title #}
{% block spaTitle %}index{% endblock %}

{% block content %}

    <main role="main">
        <section class="row row--primary lg:pb-56" aria-labelledby="latestNews">
            <div class="container">

                <h2 class="mb-4 md:mb-8 md:mb-10 text-blue-800" id="latestNews">Latest news</h2>
                
                <ul class="flex flex-wrap -mx-2 lg:-mx-4 -mt-4" aria-labelledby="latestNews">
                    {% for item in blog %}
                        <li class="w-full sm:w-1/2 md:w-1/3 px-2 lg:px-4 mt-4">
                            {% include 'partials/card.njk' %}
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </section>

        <section class="row row--white" aria-labelledby="titleHere">
            <div class="container">
                
                <div class="flex">
                    <div class="card card--hover w-full lg:w-9/12 lg:ml-auto bg-gray-300 lg:-mt-56">
                        <h2 class="flex-1 will-change-transform mb-2 md:mb-4 lg:mb-8" id="titleHere">Title here</h2>
                        <p class="text-gray-700 text-base">Lorem ipsum dolor, sit amet consectetur adipisicing elit. Vero error facilis beatae similique dolore consectetur quod pariatur, rem deleniti aperiam temporibus numquam, nisi optio dolorem, suscipit repellat ducimus quaerat quae?</p>
                    </div>
                </div>
            </div>
        </section>

        <section class="row row--white" aria-labelledby="latestNews">
            <div class="container">
                <blockquote class="h2 italic text-center text-blue-700 lg:m-auto lg:w-9/12">Suscipit totam architecto eum accusantium autem voluptatem, libero doloremque.</blockquote>
            </div>
        </section>
    </main>

{% endblock %}